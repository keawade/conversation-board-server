{
  "name": "conversation-board-server",
  "version": "1.0.0",
  "description": "Back end server for Conversation Board",
  "main": "index.ts",
  "repository": "git@github.com:whiteboards/conversation-board-server.git",
  "author": {
    "name": "Keith Wade",
    "email": "keawade@protonmail.com",
    "url": "https://keawade.io"
  },
  "contributors": [
    {
      "name": "Colby Rodeheaver"
    },
    {
      "name": "Nathan Bland"
    }
  ],
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/whiteboards/conversation-board-server/issues'"
  },
  "scripts": {
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"tsc -w\" \"nodemon --inspect dist/server.js\"",
    "build": "tsc",
    "lint": "tslint src/**/*.ts",
    "test": "jest --watch",
    "travis": "npm run lint && jest"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.1",
    "@types/morgan": "^1.7.35",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^22.1.4",
    "nodemon": "^1.14.12",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-microsoft-contrib": "^5.0.2",
    "typescript": "^2.7.1"
  }
}
